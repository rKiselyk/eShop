@model ShopCartViewModel

<div class="container">
    @foreach (var elem in Model.ShopCart.ListShopItems) { 
        <div class="alert alert-warning mt-3">
            <b>Phone</b><b>@elem.Phone.Name</b>
            <b>Price</b><b>@elem.Phone.Price.ToString("c")</b>
        </div>
    }
    <hr />
    <div class="btn btn-danger" asp-controller="Order">Pay</div>
</div>
